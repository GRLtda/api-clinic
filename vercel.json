{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "external": ["@sparticuz/chromium"],
        "includeFiles": "node_modules/@sparticuz/chromium/bin/**"
      }
    },
    {
      "src": "src/api/cron-minute.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/api/cron-daily.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron-minute",
      "dest": "src/api/cron-minute.js"
    },
    {
      "src": "/api/cron-daily",
      "dest": "src/api/cron-daily.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron-minute",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron-daily",
      "schedule": "0 1 * * *"
    }
  ]
}
